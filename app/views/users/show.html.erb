<div class="booyah-box">
  <div class="col-xs-4">
    <%= image_tag 'icon-yuzuranger.png' %>
  </div>
  <div class="col-xs-8">
    <h1><%= @user.email %></h1>
    <h3>Member since: <%=@user.created_at.strftime("%B %d, %Y") %></h3>
    <h4><%= @user.comments.count %> comments posted. </h4>
    <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
  </div>
  <div class="clear"></div>
</div>