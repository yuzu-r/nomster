<div class="booyah-box">
  <div class="col-xs-4">
    <%= image_tag 'icon-yuzuranger.png' %>
  </div>
  <div class="col-xs-8">
    <h1><%= @user.email %></h1>
    <h3>Member since: <%=@user.created_at.strftime("%B %d, %Y") %></h3>
    <h4><%= @user.comments.count %> comments posted. </h4>
    <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
  </div>
  <div class="clear"></div>
</div>

<br /><br />
<h2 class="text-center">My Comments</h2>
<br /><br />
<% @user.comments.each do |comment| %>
  <div class="col-xs-12 col-sm-6">
    <h3 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h3>
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
    </blockquote>
  </div>
<% end %>

<div class="clear"></div>
<br /><br />
<h2 class="text-center">My Places<h2>
<br /><br />
<% @user.places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />
  </div>
<% end %>

